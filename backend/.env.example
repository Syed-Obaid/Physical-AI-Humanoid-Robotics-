# Database settings
DATABASE_URL=postgresql://user:password@localhost/dbname

# API settings
API_V1_STR=/v1
PROJECT_NAME=RAG Chatbot API

# Security settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Session settings
SESSION_EXPIRY_MINUTES=60

# Cohere settings (Get your API key from https://cohere.com/)
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL=command-r
COHERE_EMBED_MODEL=embed-english-v3.0

# Qdrant settings (Get your credentials from https://cloud.qdrant.io/)
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_URL=https://your-cluster-url.gcp.cloud.qdrant.io
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=book_embeddings

# Performance settings
RESPONSE_TIMEOUT=5
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Vector settings
EMBEDDING_DIMENSION=1024

# Book chunking settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
